<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Transacciones"
    android:id="@+id/con_transacciones">


    <TextView
        android:id="@+id/txt_transaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Transacciones:"
        android:textColor="@color/blanco"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_punto_de_venta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boton"
        android:drawableLeft="@drawable/img_ubicacion"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="20dp"
        android:paddingRight="55dp"

        android:text="Buscar punto de venta"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/blanco_op"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_transaciones" />

    <Button
        android:id="@+id/btn_credito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boton"
        android:drawableLeft="@drawable/img_tarjeta"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="20dp"
        android:paddingRight="100dp"
        android:text="Comprar credito"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/blanco_op"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_punto_de_venta" />

    <Button
        android:id="@+id/btn_transferir_credito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boton"
        android:drawableLeft="@drawable/img_dinero"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="20dp"
        android:paddingRight="95dp"
        android:text="Transferir credito"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/blanco_op"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_credito" />

    <Button
        android:id="@+id/btn_movimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boton"
        android:drawableLeft="@drawable/img_movimientos"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="20dp"
        android:paddingRight="125dp"
        android:text="Movimientos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/blanco_op"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_transferir_credito" />

    <Button
        android:id="@+id/btn_infracciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boton"
        android:drawableLeft="@drawable/img_buscar"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="20dp"
        android:paddingRight="65dp"
        android:text="Buscar infracciones"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/blanco_op"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_movimientos" />


</androidx.constraintlayout.widget.ConstraintLayout>